@model Finance.Models.Conta

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Nome)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Nome)
    @Html.ValidationMessageFor(model => model.Nome)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Descricao)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Descricao)
    @Html.ValidationMessageFor(model => model.Descricao)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.SaldoAtual)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.SaldoAtual)
    @Html.ValidationMessageFor(model => model.SaldoAtual)
</div>

<div class="editor-label">
    Banco
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.BancoId, ((IEnumerable<Finance.Models.Banco>)ViewBag.Banco).Select(option => new SelectListItem
    {
        Text = Html.DisplayTextFor(_ => option.Nome).ToString(),
        Value = option.BancoId.ToString(),
        Selected = (Model != null) && (option.BancoId == Model.BancoId)
    }), "Selecione um item...")
    @Html.ValidationMessageFor(model => model.BancoId)
</div>
<div class="editor-label">
    Usuario
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.UsuarioId, ((IEnumerable<Finance.Models.Usuario>)ViewBag.Usuario).Select(option => new SelectListItem
    {
        Text = Html.DisplayTextFor(_ => option.UserName).ToString(),
        Value = option.Id.ToString(),
        Selected = (Model != null) && (option.Id == Model.UsuarioId)
    }), "Selecione um item...")
    @Html.ValidationMessageFor(model => model.UsuarioId)
</div>
