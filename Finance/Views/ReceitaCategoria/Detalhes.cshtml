@model Finance.Models.ReceitaCategoria

@{
    ViewBag.Title = "Detalhes";
}

<h3>Detalhes ReceitaCategoria</h3>


    <div class="display-label">Nome</div>
    <div class="display-field">@Model.Nome</div>

    <div class="display-label">Receitas</div>
    <div class="display-field">@(Model.Receitas == null ? "None" : Model.Receitas.Count.ToString())</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id=Model.ReceitaCategoriaId }, new { @class = "button tiny primary" })
    @Html.ActionLink("Voltar para listagem", "Indice")
</p>


