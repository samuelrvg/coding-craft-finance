@model IEnumerable<Finance.Models.ReceitaCategoria>

@{
    ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Criar Novo", "Criar", new { }, new { @class = "button tiny primary" })
</p>
<table>
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Receitas
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @item.Nome
            </td>
            <td>
                @(item.Receitas == null ? "None" : item.Receitas.Count.ToString())
            </td>

            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.ReceitaCategoriaId }, new { @class = "button tiny primary" })
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.ReceitaCategoriaId }, new { @class = "button tiny secondary" })
                @Html.ActionLink("Excluir", "Excluir", new { id = item.ReceitaCategoriaId }, new { @class = "button tiny alert" })
            </td>
        </tr>
    }

</table>


