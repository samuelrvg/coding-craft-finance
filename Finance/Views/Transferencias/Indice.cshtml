@model IEnumerable<Finance.Models.Transferencia>

@{
    ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Criar Novo", "Criar")
</p>
<table>
    <tr>
        <th></th>
        <th>
            Valor
        </th>
        <th>
            ContaOrigem
        </th>
        <th>
            ContaDestino
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id=item.TransferenciaId }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id=item.TransferenciaId }) |
            @Html.ActionLink("Excluir", "Excluirt", new { id=item.TransferenciaId })
        </td>
        <td>
			@String.Format("{0:F}", item.Valor)
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.ContaOrigem).ToString()
        </td>
        <td>
			@Html.DisplayTextFor(_ => item.ContaDestino).ToString()
        </td>
    </tr>
}

</table>


