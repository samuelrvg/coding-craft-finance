@model Finance.Models.DespesaCategoria

@{
    ViewBag.Title = "Detalhes";
}

<h3>Detalhes DespesaCategoria</h3>


    <div class="display-label">Nome</div>
    <div class="display-field">@Model.Nome</div>

    <div class="display-label">Despesas</div>
    <div class="display-field">@(Model.Despesas == null ? "None" : Model.Despesas.Count.ToString())</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id=Model.DespesaCategoriaId }, new { @class = "button tiny primary" })
    @Html.ActionLink("Voltar para listagem", "Indice")
</p>


