@model IEnumerable<Finance.Models.Conta>

@{
                /**/

                ViewBag.Title = "Indice";
}

<h2>Indice</h2>

<p>
    @Html.ActionLink("Criar Novo", "Criar", new { }, new { @class = "button tiny primary" })
</p>
<table>
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Descricao
            </th>
            <th>
                SaldoAtual
            </th>
            <th>
                Banco
            </th>
            <th>
                Usuario
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @item.Nome
            </td>
            <td>
                @item.Descricao
            </td>
            <td>
                @String.Format("{0:F}", item.SaldoAtual)
            </td>
            <td>
                @Html.DisplayTextFor(_ => item.Banco.Nome).ToString()
            </td>
            <td>
                @Html.DisplayTextFor(_ => item.Usuario.UserName).ToString()
            </td>

            <td>
                @Html.ActionLink("Editar", "Editar", new { id = item.ContaId }, new { @class = "button tiny primary" })
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.ContaId }, new { @class = "button tiny secondary" })
                @Html.ActionLink("Excluir", "Excluir", new { id = item.ContaId }, new { @class = "button tiny alert" })
            </td>
        </tr>
    }

</table>


