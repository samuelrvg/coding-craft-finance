@model Finance.Models.Despesa

@* This partial view defines form fields that will appear when creating and editing entities *@

<div class="editor-label">
    @Html.LabelFor(model => model.Descricao)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Descricao)
    @Html.ValidationMessageFor(model => model.Descricao)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.Valor)
</div>
<div class="editor-field">
    @Html.EditorFor(model => model.Valor)
    @Html.ValidationMessageFor(model => model.Valor)
</div>

<div class="editor-label">
    DespesaCategoria
</div>
<div class="editor-field">
    @Html.DropDownListFor(model => model.DespesaCategoriaId, ((IEnumerable<Finance.Models.DespesaCategoria>)ViewBag.DespesaCategoria).Select(option => new SelectListItem {
        Text = Html.DisplayTextFor(_ => option.Nome).ToString(), 
        Value = option.DespesaCategoriaId.ToString(),
        Selected = (Model != null) && (option.DespesaCategoriaId == Model.DespesaCategoriaId)
    }), "Selecione um item...")
    @Html.ValidationMessageFor(model => model.DespesaCategoriaId)
</div>
